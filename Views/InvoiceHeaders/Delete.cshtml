@model ArmyTechTask.Models.InvoiceHeader

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<h3 class="alert alert-danger">Are you sure you want to delete this?</h3>
<div>
    <h4>Invoice Header</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Invoicedate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Invoicedate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Branch)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Branch.BranchName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Cashier)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cashier.CashierName)
        </dd class>
    </dl>
    
    <form asp-action="Delete">



         <div class="row">
                <div class="col-6">
                    <input type="hidden" asp-for="Id" />
                   <input type="submit" value="Delete" class="btn btn-danger form-control" />    
               </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-outline-primary form-control">Back to List</a>
                </div>
            </div>
    </form>
</div>
